<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mpp.librarysys.javafx.controllers.AdminFxController">
    <children>
      <ScrollPane HBox.hgrow="ALWAYS">
         <HBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </HBox.margin>
         <content>
              <VBox alignment="TOP_CENTER">
                  <children>
                  <TabPane fx:id="adminMainTabPane" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
                    <tabs>
                      <Tab text="Members">
                        <content>
                          <AnchorPane>
                                 <children>
                                    <TabPane fx:id="membersTabPane" layoutX="13.0" layoutY="64.0" tabClosingPolicy="UNAVAILABLE">
                                      <tabs>
                                        <Tab closable="false" text="All Members">
                                          <content>
                                            <AnchorPane fx:id="allMembersAnchorPane" prefHeight="426.0" prefWidth="588.0" />
                                          </content>
                                        </Tab>
                                        <Tab text="Add Member">
                                          <content>
                                            <AnchorPane>
                                                <fx:include source="add-member.fxml" />
                                            </AnchorPane>
                                          </content>
                                        </Tab>
                                      </tabs>
                                    </TabPane>
                                 </children>
                              </AnchorPane>
                        </content>
                      </Tab>
                        <Tab text="Books">
                           <content>
                              <AnchorPane>
                                 <children>
                                    <TabPane fx:id="bookTabPane" layoutX="12.0" layoutY="65.0" tabClosingPolicy="UNAVAILABLE">
                                       <tabs>
                                          <Tab text="All Books">
                                             <content>
                                                <AnchorPane />
                                             </content>
                                          </Tab>
                                          <Tab text="Add Books">
                                             <content>
                                                <AnchorPane>
                                                    <fx:include fx:id="addBook" source="add-book.fxml" />
                                                </AnchorPane>
                                             </content>
                                          </Tab>
                                       </tabs>
                                    </TabPane>
                                 </children>
                              </AnchorPane>
                           </content>
                        </Tab>
                    </tabs>
                  </TabPane>
                  </children>
              </VBox>
         </content>
      </ScrollPane>
    </children>
</HBox>
